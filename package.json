{
  "name": "su-sendgrid",
  "version": "1.0.0",
  "description": "StampinUp SendGrid Azure DevOps Extension",
  "main": "index.js",
  "scripts": {
    "build": "npm run move-npm && npm run restore-prod && npm run compile && npm run move-task",
    "build-clean": "npm run clean && npm run build",
    "clean-js": "rimraf SU-SendGrid/**/*.js && rimraf SU-SendGrid/*.js",
    "clean-map": "rimraf SU-SendGrid/**/*.js.map && rimraf SU-SendGrid/*.js.map",
    "clean": "rimraf dist && npm run clean-js && npm run clean-map",
    "compile": "npx tsc --project ./SU-SendGrid",
    "move-npm": "mkdirp dist/SU-SendGrid && copyfiles \"./package.json\" dist/SU-SendGrid",
    "move-task": "copyfiles \"./SU-SendGrid/!(*.ts)\" dist",
    "package": "tfx extension create --manifest-globs vss-extension.json",
    "package-rev": "tfx extension create --manifest-globs vss-extension.json --rev-version",
    "restore-prod": "cd dist/SU-SendGrid && npm install --omit=dev",
    "test": "cd SU-SendGrid && npx tsc && npx mocha tests/**/*.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "azure-devops-extension-sdk": "^4.0.2",
    "azure-pipelines-task-lib": "^5.2.1"
  },
  "devDependencies": {
    "@babel/register": "^7.27.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.0",
    "@types/q": "^1.5.8",
    "@types/sinon": "^10.0.15",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "mocha": "^10.8.2",
    "rimraf": "^6.0.1",
    "sinon": "^15.2.0",
    "sync-request": "^6.1.0",
    "typescript": "^5.9.2"
  }
}
